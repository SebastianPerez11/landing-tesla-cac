---
const {image, alt, model, href } = Astro.props;
---
<div class="flex flex-col items-center">
    <a href={href}>
      <img
      class="w-56"
      src={image}
      alt={alt}
    />
    </a>
    <span class="text-lg font-semibold">{model}</span>
    <footer class="text-base">
      <a class="opacity-75 underline border-b-1 mr-3" href="">Learn</a>
      <a class="opacity-75 underline border-b-1" href="">Order</a>
    </footer>
  </div>