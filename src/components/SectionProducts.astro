---
import ButtonPrimary from "./ButtonPrimary.astro";

const { title, subtitle, description } = Astro.props;
---

<section
  class=`${Astro.props.class} w-full h-dvh bg-cover bg-center flex flex-col items-center relative`
>
  <header class="absolute top-[156px] text-center">
    <slot name="svg" />
    <h2
      class=`text-[40px] font-medium leading-tight text-black ${Astro.props.colorTitle}`
    >
      {title}
    </h2>
    <span class="text-[20px] font-medium text-black">{subtitle}</span>
    <p class=`${Astro.props.colorDescription} text-xs text-black/80`>
      {description}
    </p>
  </header>
  <footer class="absolute bottom-28">
    <slot name="button">
      <ButtonPrimary
        href="/"
        class="bg-white/90 text-black/90"
        content="Order Now"
      />

      <ButtonPrimary
        href="/"
        class="bg-black/60 text-white"
        content="Demo Drive"
      />
    </slot>
  </footer>
</section>
