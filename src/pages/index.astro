---
import Layout from "../layouts/Layout.astro";
import ButtonPrimary from "../components/ButtonPrimary.astro";
import Header from "../components/Header.astro";
import SectionProducts from "../components/SectionProducts.astro";
import TitleCyber from "../svg/TitleCyber.astro";
---

<Layout title="Landing Tesla">
  <Header />
  <main id="main" class="snap-y snap-mandatory relative w-full h-screen overflow-auto">
    <!-- Seba-Hero-Section -->

    <section id="hero" class="snap-center w-full h-dvh relative">
      <video
        class="absolute w-full h-full object-cover"
        muted
        autoplay
        loop
        id="video"
      >
        <source
          src="https://digitalassets.tesla.com/tesla-contents/video/upload/f_auto/Homepage-Model-Y-Promo-Desktop-v2.mp4"
        />
      </video>
      <div
        id="containerHero"
        class="flex flex-col justify-end py-40 px-12 absolute h-full w-full text-white max-2xl:p-16 max-sm:px-6 max-sm:py-10 backdrop-brightness-75"
      >
        <header>
          <h1
            class="text-[40px] w-full font-normal mb-5 leading-tight max-md:text-3xl max-sm:text-[28px]"
          >
            Modelo Y desde $37,490 <br />
            después del crédito fiscal federal
          </h1>
          <p class="w-full max-w-[50ch] font-medium max-sm:text-sm">
            Los compradores elegibles califican para un crédito fiscal federal
            de $7,500. Aplicado en el momento de la entrega del Modelo Y. <a
              class="underline"
              href="/"
            >
              Ver detalles</a
            >
          </p>
        </header>

        <footer class="mt-10 flex flex-wrap gap-4">
          <ButtonPrimary
            href="/"
            class="bg-white/90 text-black/90"
            content="Disponible en Tienda"
          />

          <ButtonPrimary
            href="/"
            class="bg-black/90 text-white"
            content="Unidad de Demostración"
          />
        </footer>
      </div>
    </section>

