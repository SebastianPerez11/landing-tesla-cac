---
import Layout from "../layouts/Layout.astro";
import ButtonPrimary from "../components/ButtonPrimary.astro";
import Header from "../components/Header.astro";
import SectionProducts from "../components/SectionProducts.astro";
import TitleCyber from "../svg/TitleCyber.astro";
---

<Layout title="Landing Tesla">
  <Header />
  <main id="main">
    <!-- Seba-Hero-Section -->

    <section id="hero" class="w-full h-dvh relative">
      <video
        class="absolute w-full h-full object-cover"
        muted
        autoplay="true"
        loop
        id="video"
      >
        <source
          src="https://digitalassets.tesla.com/tesla-contents/video/upload/f_auto/Homepage-Model-Y-Promo-Desktop-v2.mp4#t=0.01#t=0.01"
        />
      </video>
      <div
        id="containerHero"
        class="flex flex-col justify-end py-40 px-12 absolute h-full w-full text-white max-sm:px-6 max-sm:py-10 backdrop-brightness-75"
      >
        <header>
          <h1
            class="text-[40px] w-full font-normal mb-5 leading-tight max-md:text-3xl max-sm:text-[28px]"
          >
            Model Y Starting at $37,490 <br /> After Federal Tax Credit
          </h1>
          <p class="w-full max-w-[50ch] font-medium max-sm:text-sm">
            Eligible buyers qualify for a $7,500 federal tax credit. Applied at
            time of Model Y delivery. <a class="underline" href="/"
              >See Details</a
            >
          </p>
        </header>

        <footer class="mt-10 flex flex-wrap gap-4">
          <ButtonPrimary
            href="/"
            class="bg-white/90 text-black/90"
            content="Shop Available"
          />

          <ButtonPrimary
            href="/"
            class="bg-black/90 text-white"
            content="Demo Drive"
          />
        </footer>
      </div>
    </section>

