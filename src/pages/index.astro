    <SectionProducts
      title="Model Y"
      subtitle="From $31,490"
      description="After Federal Tax Credit & Est. Gas Savings"
      class="bg-model-y max-md:bg-model-y-mob max-md:bg-top"
    />

    <SectionProducts
      title="Model 3"
      subtitle="From $38,990"
      description="Est. Lease subtitle Before Gas Savings"
      class="bg-model-3 max-md:bg-model-3-mob max-md:bg-top"
    />

    <SectionProducts
      title="Model X"
      subtitle="From $63,990"
      description="After Federal Tax Credit & Est. Gas Savings"
      class="bg-model-x max-md:bg-model-x-mob max-md:bg-top"
    />

    <SectionProducts
      title="Model S"
      subtitle="From $66,490"
      description="After Est. Gas Savings"
      class="bg-model-s max-md:bg-model-s-mob max-md:bg-top"
    />

    <SectionProducts class="bg-model-cybertruck max-md:bg-model-cybertruck-mob max-md:bg-top">
      <slot slot="svg">
        <TitleCyber class=" h-44 w-[620px] max-sm:w-80"/>
      </slot>
    </SectionProducts>

    <SectionProducts
      title="Solar Panels"
      description="Schedule a Virtual Consultation"
      colorDescription="text-white text-sm"
      colorTitle="text-white"
      class="bg-solar-panels text-white max-md:bg-solar-panels-mob max-md:bg-top"
