      title="Pared Electrica"
      class="bg-powerwall max-md:bg-powerwall-mob max-md:bg-top"
    />

    <SectionProducts
      title="Accesorios"
      class="bg-accessories max-md:bg-accessories-mob max-md:bg-top"
    >
      <slot slot="button">
        <ButtonPrimary
          href="/"
          class="bg-white/90 text-black/90"
          content="Ir a Tienda"
        />
      </slot>
    </SectionProducts>

