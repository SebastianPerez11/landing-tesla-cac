    <SectionProducts
      title="Modelo Y"
      subtitle="Desde $31,490"
      description="Después del crédito fiscal federal y el cálculo estimado."
      class="bg-model-y max-md:bg-model-y-mob max-md:bg-top"
    />

    <SectionProducts
      title="Modelo 3"
      subtitle="Desde $38,990"
      description="Est. Subtítulo de arrendamiento antes del ahorro de gasolina"
      class="bg-model-3 max-md:bg-model-3-mob max-md:bg-top"
    />

    <SectionProducts
      title="Modelo X"
      subtitle="Desde $63,990"
      description="Después del crédito fiscal federal y el cálculo estimado."
      class="bg-model-x max-md:bg-model-x-mob max-md:bg-top"
    />

    <SectionProducts
      title="Modelo S"
      subtitle="Desde $66,490"
      description="Después de Est. Ahorro de gasolina"
      class="bg-model-s max-md:bg-model-s-mob max-md:bg-top"
    />

    <SectionProducts
      class="bg-model-cybertruck max-md:bg-model-cybertruck-mob max-md:bg-top"
    >
      <slot slot="svg">
        <TitleCyber class="h-44 w-[620px] max-sm:w-80" />
      </slot>
    </SectionProducts>

    <SectionProducts
      title="Paneles Solares"
      description="Programe una consulta virtual"
      colorDescription="text-white text-sm"
      colorTitle="text-white"
      class="bg-solar-panels text-white max-md:bg-solar-panels-mob max-md:bg-top"
    />

    <SectionProducts
      title="Techo Solar"
      description="Produzca energía limpia desde su techo"
      colorDescription="text-sm"
      class="bg-solar-roof max-md:bg-solar-roof-mob max-md:bg-top"
